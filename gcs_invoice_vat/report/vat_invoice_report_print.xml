<?xml version="1.0" encoding="utf-8"?>
<odoo>


	<template id="external_layout_seti">
		<t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"/>
    	</t>
    	<t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"/>
    	</t>


		<div class="header">
	    	<table style="border:0pt;width:100%;font-size:12px; margin-top:-10px;font-family:DroidArabicKufiRegular !important" width="100%">
	    		<link rel="stylesheet" href="/gcs_invoice_vat/static/src/css/style.css"/>
	            <tr>
	                <td colspan="2" width="35%">
	                	<strong><span style="padding-left:5px;" t-field="company.name"/></strong><br/>
	                	<t t-if="company.street">
	                		<span style="padding-left:5px;" t-field="company.street"/><br/>
	                	</t>
	                	<t t-if="company.street2">
	                		<span style="padding-left:5px;" t-field="company.street2"/><br/>
	                	</t>
	                	<t t-if="company.city">
	                		<span style="padding-left:5px;" t-field="company.city"/><br/>
	                	</t>
	                	<t t-if="company.country_id">
	                		<span style="padding-left:5px;" t-field="company.country_id.name"/><br/>
	                	</t>
	                </td>
	                
	                <td  colspan="3" width="30%" class="text-center"><img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="height: 100px;width: 100px; margin-top:5px;margin-right:10px;; margin-bottom:10px; " alt="Logo"/></td>

	               <td colspan="2" width="35%" class="text-right">
	                	<strong>
	                		<span class="text-right arabic" style="padding-right:5px;" t-field="company.arabic_name"/></strong><br/>
	                	<t t-if="company.arabic_street">
	                		<span class="text-right arabic" style="padding-right:5px;" t-field="company.arabic_street"/><br/>
	                	</t>
	                	<t t-if="company.arabic_street2">
	                		<span class="text-right arabic" style="padding-right:5px;" t-field="company.arabic_street2"/><br/>
	                	</t>
	                	<t t-if="company.arabic_city">
	                		<span class="text-right arabic" style="padding-right:5px;" t-field="company.arabic_city"/><br/>
	                	</t>
	                	<t t-if="company.arabic_country">
	                		<span class="text-right arabic" style="padding-right:5px;" t-field="company.arabic_country"/><br/>
	                	</t>
	                </td>
	            </tr>

	           
	        	
	        </table>
        </div>
        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>


      <div class="footer o_background_footer">
            <div class="text-center" style="font-size:14px;"  >
                <ul class="list-inline">
                    <li t-if="company.phone" class="list-inline-item"><i class="fa fa-phone" role="img" aria-label="Phone" title="Phone"/> <span t-field="company.phone"/></li>

                    <li t-if="company.email" class="list-inline-item"><i class="fa fa-at" role="img" aria-label="Email" title="Tax ID"/> <span t-field="company.email"/></li>

                    <li t-if="company.website" class="list-inline-item"><i class="fa fa-globe" role="img" aria-label="Website" title="Website"/> <span t-field="company.website"/></li>
                    <li t-if="company.vat" class="list-inline-item"><i class="fa fa-building-o" role="img" aria-label="Fiscal number"/><t t-esc="(company.country_id.vat_label or 'Tax ID').replace(' ','\N{NO-BREAK SPACE}')"/>: <span t-esc="company.vat.replace(' ','\N{NO-BREAK SPACE}')"/></li>
                </ul>
               <!-- <div t-field="company.report_footer"/>-->
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page:
                    <span class="page"/>
                    of
                    <span class="topage"/>
                </div>
               </div>
        </div>


	</template>









	<template id="report_tax_invoice_document">
		<t t-call="gcs_invoice_vat.external_layout_seti">
			<t t-foreach="doc" t-as="o">
				<div class="page" style="padding-top:45px">
					<link rel="stylesheet" href="/gcs_invoice_vat/static/src/css/style.css"/>
					<t t-set="company" t-value="res_company"/>
					<div class="font">

					<table style="border:1pt solid grey;width:100%;color:black; margin-top:-28pt;" class="table-condensed table-sm">
							<tr>
								<td style="padding:4pt;margin:5pt;font-weight: bold;text-align:center;background-color:#DCDCDC;"><span class="text-right arabic">Tax Invoice / فاتورة ضريبية </span></td> 
							</tr>
					</table>

					<div class="row mt32 mb32">
		                <div class="col-9" style="margin-top:5pt; color:black;">
							<table style="border:1pt solid grey;width:100%;padding:10pt;color:black;font-family:'DroidArabicKufiRegular';" class="table table-bordered table-sm">
								<tr>
									<td style="font-weight:bold; width:25%;">Invoice Number</td>
									<td style="width:50%; text-align:center;"><span t-field="o.name"/></td>
									<td class="arabic" style="width:25%; text-align:right;">رقم الفاتورة</td>
								</tr>
								<tr>
									<td style="font-weight:bold; width:25%;">Invoice Date</td>
									<td style="width:50%; text-align:center;"><span t-field="o.invoice_date"/></td>
									<td class="arabic" style="width:25%; text-align:right;">تاريخ الفاتورة</td>
								</tr>
								<!--<tr>
									<td style="font-weight:bold; width:25%;">Due Date</td>
									<td style="width:50%; text-align:center;"><span t-field="o.date_due"/></td>
									<td class="arabic" style="width:25%; text-align:right;">تاريخ الاستحقاق</td>
								</tr>-->
								<tr>
									<td style="font-weight:bold; width:25%;">Reference</td>
									<td style="width:50%; text-align:center;">
									<span t-field="o.ref"/>
									</td>
									<td class="arabic" style="width:25%; text-align:right;">المرجع</td>
								</tr>


								<!--<tr>
									<td style="font-weight:bold; width:25%;">Payment Terms</td>
									<td style="width:50%; text-align:center;">
									<span t-field="o.invoice_payment_term_id"/>
									</td>
									<td class="arabic" style="width:25%; text-align:right;">طريقة الدفع</td>
								</tr>-->
								<tr t-if="o.contrac_no">
									<td style="font-weight:bold; width:25%;">Contract number</td>
									<td style="width:50%; text-align:center;"><span t-field="o.contrac_no"/></td>
									<td class="arabic" style="width:25%; text-align:right;">رقم العقد</td>
								</tr>
								<tr t-if="o.subject_name">
									<td style="font-weight:bold; width:25%;">Subject</td>
									<td style="width:50%; text-align:center;"><span t-field="o.subject_name"/></td>
									<td class="arabic" style="width:25%; text-align:right;">الموضوع</td>
								</tr>
								<tr t-if="o.po_number">
									<td style="font-weight:bold; width:25%;">PO number</td>
									<td style="width:50%; text-align:center;"><span t-field="o.po_number"/></td>
									<td class="arabic" style="width:25%; text-align:right;">رقم طلب الشراء</td>
								</tr>
								<tr t-if="o.project_name">
									<td style="font-weight:bold; width:25%;">Project Name</td>
									<td style="width:50%; text-align:center;"><span t-field="o.project_name"/></td>
									<td class="arabic" style="width:25%; text-align:right;">اسم المشروع</td>
								</tr>
								<tr t-if="o.vendor_num">
									<td style="font-weight:bold; width:25%;">Vendor No.</td>
									<td style="width:50%; text-align:center;"><span t-field="o.vendor_num"/></td>
									<td class="arabic" style="width:25%; text-align:right;">رقم المقاول</td>
								</tr>
							</table>
						</div>
						<div class="col-3" style="margin-top:5pt; padding-left:25pt;">
			                <img t-if="doc.get_qr_code()"
								style="display:block;margin-left:30px;"
								t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', doc.get_qr_code(), 140, 100)" alt="Image"/>
			            </div>
			        </div>


			        <br />


						<table style="border:1pt solid black;width:100%;" class="table table-bordered table-sm" >
							<tr style="border:1pt solid black;width:100%;color:black;font-family:'DroidArabicKufiRegular';">
								<td width="25%" style="font-weight: bold;background-color:#DCDCDC;">Buyer / Supplier</td>
								<td width="50%" style="font-weight: bold;text-align:center;background-color:#DCDCDC;"></td>
								<td width="25%" class="text-right arabic" style="font-weight: bold;text-align:center;background-color:#DCDCDC;">العميل / المورد</td>
							</tr>
						

							<tr>
								<td class="text-left">Name</td>
								<td class="text-center"><span t-field="o.partner_id.name"/> <br/>
								 <span t-field="o.partner_id.arabic_name"/></td>
								<td  class="text-right arabic">اسم العميل / المورد</td>
							</tr>
							<tr>
								<td class="text-left">Vat Number</td>
								<td class="text-center"><span t-field="o.partner_id.vat"/></td>
								<td class="text-right arabic">الرقم الضريبي</td>
							</tr>
							
							<tr>
								<td class="text-left">Street Name</td>
								<td class="text-center"><span t-field="o.partner_id.street"/></td>
								<td class="text-right arabic">اسم الشارع</td>
							</tr>
							<tr>
								<td class="text-left">District</td>
								<td class="text-center"><span t-field="o.partner_id.state_id.name"/></td>
								<td class="text-right arabic">الحي</td>
							</tr>
							<tr>
								<td class="text-left">City</td>
								<td class="text-center"><span t-field="o.partner_id.city"/></td>
								<td class="text-right arabic">المدينة</td>
							</tr>
							<tr>
								<td class="text-left">Country</td>
								<td class="text-center"><span t-field="o.partner_id.country_id.name"/></td>
								<td class="text-right arabic" style="width:18%;">البلد</td>
							</tr>
							<tr>
								<td class="text-left">Postal Code</td>
								<td class="text-center"><span t-field="o.partner_id.zip"/></td>
								<td class="text-right arabic">الرمز البريدي</td>
							</tr>
							
							
							
						</table>
		            </div>

					<table style="border:1pt solid grey;width:100%;color:black; margin-top:2pt; color:black; font-size: 11px;" class="table-condensed">
						<thead>
							<tr style="background-color:#DCDCDC">
								<t t-if="o.report_type not in ['Sadara Report', 'General Report']">
									<td style="border:1pt solid grey;text-align:center;padding:2pt;font-size: 11px;">Item Subtotal<br/>(Including VAT) <br/><span class="arabic">المجموع شامل الضريبة</span></td>
								</t>
								<t t-if="o.report_type not in ['Sadara Report', 'General Report']">
									<td style="border:1pt solid grey;text-align:center; width:10%;padding:2pt">Tax Amount<br/><span class="arabic">مبلغ الضريبة</span></td>
								</t>
								
								<td style="border:1pt solid grey;text-align:center;padding:2pt;width:8%">Tax Rate<br/><span class="arabic">نسبة الضريبة</span></td>
								
								<td style="border:1pt solid grey;text-align:center;padding:2pt;" >TaxableAmount<br/><span class="arabic">المبلغ الخاضع للضريبة</span></td>
								
								<td style="border:1pt solid grey;text-align:center;padding:2pt;width:7%">Quantity<br/><span class="arabic">الكمية</span></td>
								
								<td style="border:1pt solid grey;text-align:center;padding:2pt;">Unit Price<br/><span class="arabic">سعر الوحدة</span></td>

								
								<td width="30%" style="border:1pt solid grey;text-align:right;padding:2pt; ">Product / service<br/><span class="arabic">المنتج / الخدمة</span></td>
							</tr>
						</thead>
						
						<t t-set="tax_total" t-value="0"/>
						<t t-set="discount_total" t-value="0"/>
									
						<tbody class="invoice_tbody">
						<tr t-foreach="o.invoice_line_ids" t-as="l">
						<t t-set="line_tax_total" t-value="0"/>
						<t t-foreach="l.tax_ids" t-as="t">
						<t t-set="tax_total" t-value="tax_total + l.price_subtotal* t.amount/100"/>
						<t t-set="line_tax_total" t-value="line_tax_total + t.amount"/>
						</t>
						<t t-set="discount_total" t-value="discount_total + ((l.price_unit * l.quantity) - l.price_subtotal)"/>
							<t t-if="o.report_type not in ['Sadara Report', 'General Report']">
								<td style="border-right:1pt solid grey;text-align:center;padding:3pt" >
									<span t-field="l.price_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
							     </td>
							 </t>
							 <t t-if="o.report_type not in ['Sadara Report', 'General Report']">
								<td style="padding:3pt;border-right:1pt solid grey;text-align:center;">
									<t t-set="line_tax_total" t-value="l.price_subtotal*line_tax_total/100"/>
									<sapn t-esc="line_tax_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
								</td>
							</t>
						<td style="border-right:1pt solid grey;padding:2pt;text-align:center;">
							<t t-foreach="l.tax_ids" t-as="t">
									<span t-esc="'%.2f'%(t.amount)"/> %
								 		</t>
							<span t-if="not l.tax_ids">0.0 %</span>
									 		</td>
						<td style="padding:3pt;border-right:1pt solid grey;text-align:center;">
						<sapn t-esc="l.price_unit * l.quantity" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
									 		</td>	
						
						<td style="border-right:1pt solid grey;text-align:center;padding:3pt">
							<span t-esc="'%.2f'%(l.quantity)"/></td>
						
						<td style="border-right:1pt solid grey;text-align:center;padding:3pt">
							<span t-field="l.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
						
											
						<td style="border-right:1pt solid grey;text-align:right;padding:3pt">
						<span t-field="l.name"/> - 
						<span class="text-right arabic" t-esc="doc.get_product_arabic_name(l.product_id)"/>
						</td>
						 	</tr>
		               	</tbody>
					</table>		            	

					<table style="border:1pt solid grey;width:100%;color:black;margin-top:8px; color:black;font-size: 11px" class="table table-bordered table-sm">
						<thead>
							<tr>
								<td width="33%" style="font-weight: bold;background-color:#DCDCDC;">Total Amounts</td>
								<td width="47%" style="font-weight: bold;background-color:#DCDCDC;"/>
								<td width="20%" style="font-weight: bold;background-color:#DCDCDC;" class="text-right arabic">المبالغ الإجمالية</td>
							</tr>
							<t t-set="discount_before_total" t-value="doc.amount_untaxed + discount_total"/>
							<t t-set="calc_advance_pay" t-value="0"/>
							<t t-set="retencion_calc" t-value="0"/>
							<t t-set="calc_advance_pay" t-value="doc.amount_untaxed * doc.advance_payment/100"/>
							<t t-set="taxable_total_amount" t-value="doc.amount_total - tax_total - calc_advance_pay"/>
							<t t-set="vat_amt_calc" t-value="taxable_total_amount *15/100"/>
							<t t-set="amt_incl_vat" t-value="taxable_total_amount + vat_amt_calc"/>
							<t t-set="retencion_calc" t-value="doc.amount_untaxed * doc.retainsion_amount/100"/>
							<t t-set="perform_calc" t-value="doc.amount_untaxed * doc.perform_band/100"/>
							<t t-set="net_total_calc" t-value="amt_incl_vat - retencion_calc - perform_calc"/>
							
							<tr>
								<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">TOTAL Exclude VAT</td>

								<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center">
								<span t-esc="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>

								<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">الإجمالي قبل الضريبة</td>
							</tr>

							<t t-if="calc_advance_pay">
								<tr>
									<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">Advance Payment - <span t-field="doc.advance_payment" t-options='{"widget": "float", "decimal_precision": "Product Price"}'/>%</td>

									<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-esc="calc_advance_pay" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>

									<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">الدفعة المقدمة</td>
								</tr>
							</t>
							<t t-if="doc.back_charge">
								<tr>
									<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">Back Charge</td>

									<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-esc="doc.back_charge" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>

									<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">Back Charge</td>
								</tr>
							</t>
							<tr>
								<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">Taxable Amount</td>
								
								<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-field="o.taxable_total_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
								</td>
								<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">المبلغ الخاضع للضريبة</td>
							</tr>

							<tr>
								<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">VAT 15%</td>
				
								<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-field="o.vat_15" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
								<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt"> ضريبة القيمة المضافة ٪١٥</td>
							</tr>

							<tr>
								<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">Amount including VAT</td>
								
								<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-field="o.amount_include_vat" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
								<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">الاجمالي شامل الضريبة</td>
							</tr>
							<t t-if="retencion_calc">
								<tr>
									<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">Retention Dedection - <span t-field="doc.retainsion_amount" t-options='{"widget": "float", "decimal_precision": "Product Price"}'/>%</td>
									
									<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-field="o.retainsion_amount_form" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
									<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">قيمة استقطاع ضمان الأعمال</td>
								</tr>
							</t>
							<t t-if="perform_calc">
								<tr>
									<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">Performance Bond</td>
									
									<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-field="o.perform_band_form" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
									<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">التأمين النهائي</td>
								</tr>
							</t>
							<t t-if="doc.saudization_deduction">
								<tr>
									<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">Saudization Deduction</td>
									<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-esc="doc.saudization_deduction" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>

									<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">خصم السعودة</td>
								</tr>
							</t>
							<tr>
								<td class="text-left"  style="font-weight: bold;border-right:1pt solid grey;text-align:left;padding:3pt">Net Total Amount ( Amount Due )</td>
								
								<td style="border-right:1pt solid grey;text-align:center;padding:3pt" class="text-center"><span t-field="o.net_total_calc" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
								
								<td class="text-right arabic" style="border-right:1pt solid grey;text-align:right;padding:3pt">إجمالي المبلغ المستحق</td>
							</tr>
							
						</thead>
					</table>
